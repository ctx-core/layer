{
	"name": "@ctx-core/layer",
	"version": "13.0.5",
	"description": "ctx-core layer",
	"keywords": [
		"ctx-core",
		"layer"
	],
	"homepage": "https://github.com/ctx-core/layer#readme",
	"bugs": {
		"url": "https://github.com/ctx-core/layer/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/ctx-core/layer.git"
	},
	"license": "Apache-2.0",
	"author": "Brian Takita",
	"type": "module",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		},
		"./package.json": "./package.json"
	},
	"scripts": {
		"build": "npm run compile",
		"clean": "rimraf dist",
		"compile": "npm run compile_source && npm run compile_declaration",
		"compile_source": "swc src --out-dir dist --copy-files --source-maps --config-file .swcrc",
		"compile_declaration": "tsc src/index.ts --declaration --emitDeclarationOnly --declarationDir dist",
		"exec": "$@",
		"prepublishOnly": "npm run clean && npm run build"
	},
	"dependencies": {
		"@ctx-core/array": "workspace:^23.0.37",
		"@ctx-core/error": "workspace:^11.1.13",
		"@ctx-core/function": "workspace:^20.2.16",
		"@ctx-core/object": "workspace:^22.0.4",
		"@ctx-core/store": "workspace:^27.0.51",
		"svelte": "^3.44.3"
	},
	"devDependencies": {
		"@swc/cli": "^0.1.55",
		"@swc/core": "^1.2.120",
		"rimraf": "^3.0.2",
		"typescript": "next"
	},
	"publishConfig": {
		"access": "public",
		"cache": "~/.npm"
	},
	"svelte": "./dist/index.js"
}
